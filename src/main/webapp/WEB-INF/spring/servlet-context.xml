	<!-- Registration of Spring Interceptor  -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/bbs/**/"/>
			<bean id="measuringInterceptor" class="kr.co.acomp.hello.interceptor.MeasuringInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>
	

</beans>
